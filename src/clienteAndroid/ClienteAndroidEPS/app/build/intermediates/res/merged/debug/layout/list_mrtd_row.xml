<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

    <!-- ListRow Left sied Thumbnail image -->
    
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/row_icon"
            android:layout_width="60dp"
            android:layout_height="60dp" 
        	android:src="@drawable/logo_dnie3"
            android:contentDescription="@string/str_img_menu"/>
    </LinearLayout>

    <Button
        android:id="@+id/Btn_DESTROYENTRY"
        android:layout_width="25dp"
        android:layout_height="25dp" 
       	android:background="@drawable/destroyentry"
	    android:layout_alignParentRight="true"
	    android:layout_alignTop="@+id/row_title"
	    android:layout_marginTop="5dip"
        android:focusable="false"/>
    
	<TextView
        android:id="@+id/row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginLeft="5dip"
        android:text="@string/op_canempty"
		android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />
	
    <ImageView
           android:id="@+id/row_iconText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignTop="@+id/thumbnail"
       	   android:layout_toRightOf="@+id/thumbnail"
       	   android:layout_marginLeft="5dip"
           android:contentDescription="@string/str_img_menu"/>

    <TextView
        android:id="@+id/row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/row_iconText"
        android:layout_below="@+id/row_title"
        android:text="@string/str_tab_cert06"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" 
        android:layout_marginRight="30dip"/>

    <TextView
        android:id="@+id/row_nif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/row_name"
        android:layout_below="@+id/row_name"
        android:text="@string/str_tab_cert08"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans" />

</RelativeLayout><!-- From: file:/E:/PFC/pfcgit/pfc-carlosjg/src/clienteAndroid/ClienteAndroidEPS/app/src/main/res/layout/list_mrtd_row.xml -->